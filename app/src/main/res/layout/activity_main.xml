<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="@drawable/wallpaper2">
    <ImageView
            android:layout_width="83dp"
            android:layout_height="76dp" app:srcCompat="@drawable/location"
            android:id="@+id/location_icon"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintTop_toTopOf="@+id/topGuideLine" android:layout_marginTop="30dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/topGuideLine" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="horizontal"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/leftGuideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_begin="30dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/rightGuideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_end="30dp"/>
    <TextView
            android:text="SIGN UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintHorizontal_chainStyle="spread" app:layout_constraintTop_toBottomOf="@+id/location_icon"
            android:layout_marginTop="50dp"/>
    <TextView
            android:text="SIGN IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textColor="#4D8A8686"
            android:fontFamily="@font/montserrat" android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@+id/location_icon" android:layout_marginTop="50dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#CDFFFFFF"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            android:id="@+id/editText" app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="#5200B3B7" android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toTopOf="@+id/editText3"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColor="#FFFFFF"
            android:textColorHint="#CDFFFFFF"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            android:id="@+id/editText3" app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="#5200B3B7" android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintBottom_toTopOf="@+id/editText4"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="#FFFFFF"
            android:textColorHint="#CDFFFFFF"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            android:id="@+id/editText4" app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="#5200B3B7" android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/baseline_account_circle_white_18dp"
            android:id="@+id/imageView4"
            android:background="#00FFFFFF" android:backgroundTintMode="add"
            app:layout_constraintEnd_toEndOf="@+id/editText" app:layout_constraintBottom_toBottomOf="@+id/editText"
            app:layout_constraintTop_toTopOf="@+id/editText" app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintHorizontal_bias="1.0" android:foregroundTint="#00F1E5E5"
            android:layout_marginEnd="5dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_end="266dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/baseline_email_white_18dp"
            android:id="@+id/imageView6" app:layout_constraintTop_toTopOf="@+id/editText3"
            app:layout_constraintBottom_toBottomOf="@+id/editText3" app:layout_constraintEnd_toEndOf="@+id/editText3"
            android:layout_marginEnd="5dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/baseline_vpn_key_white_18dp"
            android:id="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/editText4" app:layout_constraintBottom_toBottomOf="@+id/editText4"
            app:layout_constraintEnd_toEndOf="@+id/editText4" android:layout_marginEnd="5dp"/>
    <Button
            android:text="SIGN UP"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="@+id/editText4"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintEnd_toEndOf="@+id/editText4"/>
    <TextView
            android:text="YOU CAN ALSO SIGN UP WITH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline" app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toStartOf="@+id/rightGuideline"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/facebook"
            android:id="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="5dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/google"
            android:id="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="5dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="horizontal" app:layout_constraintGuide_end="49dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>